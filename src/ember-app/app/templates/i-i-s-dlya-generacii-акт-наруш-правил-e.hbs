<h3 class="ui header">{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерДок
      class=(if (v-get validationModel "номерДок" "isInvalid") "error")
      label=(t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.номерДок-caption")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-номерДок=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерДок" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наименование"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="фИО"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.персонал-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.персонал
      displayAttributeName="фИО"
      autocomplete=true
      relationName="персонал"
      projection="ПерсоналL"
      title=(t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.персонал-caption")
      readonly=readonly
      componentName="персоналLookup"
      class=(if (v-get validationModel "персонал" "isInvalid") "error")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-персонал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "персонал" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.тЧСоставУщерба-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.тЧСоставУщерба
      displayAttributeName="суммаУщерба"
      autocomplete=true
      relationName="тЧСоставУщерба"
      projection="ТЧСоставУщербаL"
      title=(t "forms.i-i-s-dlya-generacii-акт-наруш-правил-e.тЧСоставУщерба-caption")
      readonly=readonly
      componentName="тЧСоставУщербаLookup"
      class=(if (v-get validationModel "тЧСоставУщерба" "isInvalid") "error")
      data-test-i-i-s-dlya-generacii-акт-наруш-правил-e-тЧСоставУщерба=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧСоставУщерба" "message")}}
  </div>
</form>
